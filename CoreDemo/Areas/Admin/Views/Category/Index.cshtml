@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="ibox-content">
    <h1>Kategori Listesi</h1>
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Pasif Yap</th>
            <th>Aktif Yap</th>
            <th>Düzenle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID" id="DeleteBtn" onclick="return confirm('Silmek istediğinze emin misiniz');" class="btn btn-warning">Pasif Yap</a></td>

                <td><a href="#" class="btn btn-primary">Aktif Yap</a></td>
                <td><a href="#" class="btn btn-outline-success">Düzenle</a></td>
            </tr>
        }
    </table>
    <a href="/Admin/Category/AddCategory" class="btn btn-outline-primary">Yeni Kategori</a>
</div>
<br />
