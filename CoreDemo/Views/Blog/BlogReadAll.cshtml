@model IEnumerable<EntityLayer.Concrete.Blog>
@{
	ViewData["Title"] = "BlogReadAll";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!--
	..         ::      ::::::::
..  ::::::::      ::         :::
::         :::
-->

<!DOCTYPE html>
<html>
<body>
	<!--//banner-->
	<section class="banner-bottom">
		<!--/blog-->
		<div class="container">
			<div class="row">
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					@foreach (var item in Model)
					{
					<div class="blog-grid-top">
						<div class="b-grid-top">
							<div class="blog_info_left_grid">
									<a href="/Blog/BlogReadAll/@item.BlogID/">
									<img src="@item.BlogImage" class="img-fluid" alt="" style="width:100%;height:400px">
								</a>
							</div>
							<div class="blog-info-middle">
								<ul>
									<li>
										<a href="#">
												<i class="far fa-calendar-alt"></i> @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))
										</a>
									</li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-thumbs-up"></i> 0 Likes
										</a>
									</li>
									<li>
										<a href="#">
											<i class="far fa-comment"></i> 0 Comments
										</a>
									</li>

								</ul>
							</div>
						</div>

						<h3>
								<a href="#">@item.BlogTitle</a>
						</h3>
						<p>
							@item.BlogContent
						</p>
							<a href="/Blog/" class="btn btn-primary read-m">Blog Listesi</a>
					</div>
                    }
					@await Component.InvokeAsync("CommentListByBlog",new {id = ViewBag.i})
					@*@await Html.PartialAsync("~/Views/Comment/PartialListByBlog.cshtml")*@
					@await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")
				</div>

				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
						<div class="tech-btm">
							<img src="~/web/images/banner1.jpg" class="img-fluid" alt="">
						</div>

						@await Html.PartialAsync("~/Views/NewsLatter/SubscribeMail.cshtml")

						@await Component.InvokeAsync("CategoryList")
						
						@await Component.InvokeAsync("WriterLastBlog")

						<div class="single-gd tech-btm">
							<h4>Son Gönderi</h4>
							<div class="blog-grids">
								<div class="blog-grid-left">
									<a href="single.html">
										<img src="~/web/images/b1.jpg" class="img-fluid" alt="">
									</a>
								</div>
								<div class="blog-grid-right">

									<h5>
										<a href="single.html">Pellentesque dui, non felis. Maecenas male</a>
									</h5>
								</div>
								<div class="clearfix"> </div>
							</div>
						</div>
					</div>

				</aside>
				<!--//right-->
			</div>
		</div>
	</section>
	<!--//main-->
</body>
</html>
