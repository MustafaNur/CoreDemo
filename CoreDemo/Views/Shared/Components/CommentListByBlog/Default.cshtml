@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    @if (Model.Count() > 0)
    {
        <h4>Yorumlar</h4>
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        <p class="alert-danger" style="padding:10px;border-radius:25px;text-align:center;">Bu Blogda Henüz Yorum Yapılmamıştır. İlk Yorumu Siz Yazın</p>
    }
</div>
