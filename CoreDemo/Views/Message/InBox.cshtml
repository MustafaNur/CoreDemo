@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<table class="table mdi-tablet">

    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
      
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MessageID</td>
                <td>@item.Subject</td>
                <td>@item.SenderUser.WriterName</td>
                <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
                <td>@item.MessageStatus</td>
                
                <td><a href="/Blog/DeleteBlog/@item.MessageID" class="btn btn-gradient-danger">Mesajı Aç</a></td>
                
            </tr>
        }
    </tbody>
</table>
<a href="/Blog/BlogAdd/" class="btn btn-gradient-primary btn-rounded">Yeni Mesaj Oluştur</a>

